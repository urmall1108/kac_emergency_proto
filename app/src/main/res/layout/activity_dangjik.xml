<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dangjik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sh_house.kac_emergency.dangjik">

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="당직일"
        android:id="@+id/date_text"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/date_text"
        android:id="@+id/date"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="주야구분"
        android:id="@+id/juya_text"
        android:layout_below="@id/date_text"
        android:textSize="30dp"
    />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/juya_text"
        android:layout_below="@id/date"
        android:id="@+id/juya"
        android:textSize="30dp"
        />


    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="재택근무자"
        android:id="@+id/gunmuja_text"
        android:layout_below="@id/juya_text"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/gunmuja_text"
        android:layout_below="@id/juya"
        android:id="@+id/gunmuja"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/gunmuja"
        android:layout_below="@id/juya"
        android:id="@+id/gunmuja_call"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/gunmuja_call"
        android:layout_below="@id/juya"
        android:id="@+id/gunmuja_munja"
        />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/dynamicArea"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_below="@id/gunmuja"
        >
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/buttonArea"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:layout_below="@id/gunmuja"
        android:layout_toRightOf="@id/dynamicArea"
        >
    </LinearLayout>

</RelativeLayout>
